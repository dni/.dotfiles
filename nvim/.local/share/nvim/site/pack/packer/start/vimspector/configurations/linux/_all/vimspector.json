{
    "configurations": {
        "Python Attach": {
            "adapter": "multi-session",
            "filetypes": [ "python" ],
            "variables": {
                "host": "localhost",
                "port": 5678
            },
            "breakpoints": {
                "exception": {
                    "raised": "N",
                    "uncaught": "Y",
                    "userUnhandled": "N"
                }
            },
            "configuration": {
                "request": "attach",
                "pathMappings": [{
                    "localRoot": "${workspaceRoot}",
                    "remoteRoot": "${workspaceRoot}"
                }]
            }
        }
    }
}
